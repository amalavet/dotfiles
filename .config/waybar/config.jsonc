{
  "position": "top",
  "height": 10,
  "modules-left": ["hyprland/workspaces"],
  // "modules-center": ["hyprland/window"],
  "modules-right": [
    "network",
    "pulseaudio",
    "backlight",
    "battery",
    "clock",
    "custom/sleep",
    "custom/off",
    "custom/lock",
  ],
  "clock": {
    "format": "  {:%a %D %I:%M %p}",
    "tooltip": false,
  },
  "hyprland/workspaces": {
    "persistent-workspaces": {
      "*": 1,
    },
  },
  "battery": {
    "format": "{icon}  {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "tooltip": false,
  },
  "network": {
    "format-wifi": "  {essid}",
    "format-ethernet": "󰈀  Wired",
    "format-disconnected": "  Disconnected",
    "tooltip": false,
    "on-click": "nm-connection-editor",
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "",
    "format-icons": {
      "default": ["", "", " "],
    },
    "tooltip": false,
    "on-click": "pavucontrol",
  },
  "backlight": {
    "format": " {percent}%",
    "tooltip": false,
  },
  "custom/sleep": {
    "on-click": "(sleep 1; systemctl suspend) & hyprlock",
    "format": "󰤄",
  },
  "custom/off": {
    "on-click": "systemctl poweroff",
    "format": "⏻",
  },
  "custom/lock": {
    "on-click": "hyprlock",
    "format": "󰌾",
  },
}
